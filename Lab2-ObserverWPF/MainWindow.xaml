<Window x:Class="Lab2_ObserverWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_ObserverWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10,0">
            <TextBlock Text="Производственный склад:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Остатки материалов:" Margin="0,5,0,5"/>

            <StackPanel Orientation="Horizontal" Margin="10,5,0,5">
                <TextBlock Text=" - Сталь (кг): "/>
                <TextBlock x:Name="SteelAmountTextBlock" Text="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,5,0,5">
                <TextBlock Text=" - Цемент (кг): "/>
                <TextBlock x:Name="CementAmountTextBlock" Text="0"/>
            </StackPanel>

            <!-- <TextBlock Text="Скорость моделирования:" Margin="0,20,0,5"/> -->
            <!-- <Slider x:Name="SimulationSpeedSlider" Minimum="0" Maximum="100" Value="0" Margin="10,0"/> -->
            <Button x:Name="SimulationButton" Content="Стоп, мне неприятно!" Padding="5" Margin="0,20,0,0"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10,0">
            <TextBlock Text="Поставщики:" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Тип поставщика:" Margin="0,5,0,2"/>
            <ComboBox x:Name="ProviderTypeComboBox" Margin="0,0,0,10">
                <ComboBoxItem IsSelected="True">Сталь</ComboBoxItem>
                <ComboBoxItem>Цемент</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="Минимальный размер поставки (кг/м):" Margin="0,5,0,2"/>
            <TextBox x:Name="MinAmountTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Порог срабатывания (кг/м):" Margin="0,5,0,2"/>
            <TextBox x:Name="ThresholdTextBox" Margin="0,0,0,10"/>

            <Button x:Name="AddProviderButton" Content="Добавить поставщика" Padding="5" Margin="0,20,0,0"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="10,0">
            <TextBlock Text="Данные о поставщиках:" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <ListBox x:Name="ProvidersListBox" Height="250" Margin="0,0,0,10"/>

            <TextBlock Text="Номер поставщика (индекс):" Margin="0,5,0,2"/>
            <TextBox x:Name="ProviderIdTextBox" Text="0" Margin="0,0,0,10"/>
            <Button x:Name="RemoveProviderButton" Content="Удалить поставщика" Padding="5"/>
        </StackPanel>

    </Grid>
</Window>
